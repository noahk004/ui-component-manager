{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "." // Base directory for resolving non-relative imports
    },
    "include": ["src", "lib", "__tests__"],
    "exclude": ["node_modules", "dist"]
}
